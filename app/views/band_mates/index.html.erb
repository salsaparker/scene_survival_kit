<div class="panel clearfix">
    <p class="text-left">BandMate Listing</p>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @band_mates.each do |band_mate| %>
      <tr>
        <td><%= link_to 'Show', band_mate %></td>
        <td><%= link_to 'Edit', edit_band_mate_path(band_mate) %></td>
        <td><%= link_to 'Destroy', band_mate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

